@model Category
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = @Model.Name;
}
<div class="container">
    <h1>Edit Category : @Model.Name</h1>
    <form asp-controller="category" asp-action="edit" method="post">
        <input asp-for="Id" hidden value="@Model.Id"/>

        <label class="form-label" asp-for="Name">Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input class="form-control ps-4" asp-for="Name" placeholder="Name" value="@Model.Name"/>

        <label class="form-label" asp-for="Describtion">Describtion</label>
        <span asp-validation-for="Describtion" class="text-danger"></span>
        <input class="form-control ps-4" asp-for="Describtion" placeholder="Describtion" value="@Model.Describtion"/>

        <div class="d-flex justify-content-center">
            <input type="submit" class="btn btn-success mt-4" value="Save" />
        </div>
    </form>
</div>
@section Scripts{
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
